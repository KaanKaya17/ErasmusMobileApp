<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>

    <!-- Main Card Layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="135"
                android:startColor="#A8DDF0"
                android:centerColor="#96C9DB"
                android:endColor="#84B5C6"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"
                android:alpha="0.5" />
        </shape>
    </item>

    <!-- Shine Effect (Top) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="90"
                android:startColor="#30FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

</layer-list>