<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FF"
    tools:context=".EducationAnimalsTemplate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    style="@style/TextViewTitle"
                    android:text="Fish Name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:elevation="12px"
                    android:outlineProvider="background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/rounded_box">

                    <!-- Max Size kutusu -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            style="@style/TextviewBodyWhite"
                            android:text="Max Size" />

                        <TextView
                            android:id="@+id/max_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            style="@style/TextviewBodyWhite"
                            android:text="40 cm" />
                    </LinearLayout>

                    <!-- Dikey çizgi -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>

                    <!-- Max Weight kutusu -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            style="@style/TextviewBodyWhite"
                            android:text="Max Weight" />

                        <TextView
                            android:id="@+id/max_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            style="@style/TextviewBodyWhite"
                            android:text="40 cm" />
                    </LinearLayout>

                    <!-- Dikey çizgi -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>

                    <!-- Max Depth kutusu -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextviewBodyWhite"
                            android:textAlignment="center"
                            android:text="Max Depth" />

                        <TextView
                            android:id="@+id/max_depth"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            style="@style/TextviewBodyWhite"
                            android:text="40 cm" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Other Names:"
                        style="@style/TextViewBody"
                        android:layout_marginTop="18dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/other_names"
                        android:layout_width="match_parent"
                        android:text="BıdıBıdı Fish"
                        style="@style/TextViewBody"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <!-- Colors -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Colors"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:id="@+id/fish_colors_container"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />


                        <!--
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/animalColorRoot"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:cardCornerRadius="37dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <View
                                    android:layout_marginBottom="@+id/animalColor"
                                    android:id="@+id/center_logo"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="#000000"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        -->
                    </LinearLayout>

                    <!-- Family -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Family"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_family"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <!-- Habitat -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Habitat"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_habitat"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Poisonous -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Poisonous"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_poisonous"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Edible -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Edible"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_edible"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Danger To Human -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Danger To Human"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_danger"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Social Behaviour -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Social Behaviour"
                            style="@style/TextViewBody"
                            android:gravity="start"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000000"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/fish_social_behaviour"
                            android:layout_width="150dp"
                            android:ellipsize="end"
                            android:textAlignment="textStart"
                            android:text="Value"
                            style="@style/TextViewBody"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Locations"
                        style="@style/TextViewSubtitle"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/fish_locations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:elevation="12px"
                        android:outlineProvider="background"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:background="@drawable/rounded_box">


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:onClick="btnEducation"
                            android:padding="3dp"
                            android:orientation="vertical"
                            android:background="@drawable/roundex_box_white">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textAlignment="textStart"
                                android:text="Max Depth" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fish_location_description"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        style="@style/TextViewBody"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is a big huge light weight
                        test some little testing idk what to say but im doing hey!!!"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        style="@style/TextViewSubtitle"
                        android:text="Description"/>

                    <TextView
                        android:id="@+id/fish_description"
                        android:layout_width="match_parent"
                        style="@style/TextViewBody"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is a big huge light weight test some little testing idk what to say but im doing hey!!!This is a description test part idk what to say in here butit's just a test rn"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        style="@style/TextViewSubtitle"
                        android:layout_marginBottom="15dp"
                        android:text="Distribution and Habitat"/>

                    <TextView
                        android:id="@+id/fish_distribution_habitat"
                        android:layout_width="match_parent"
                        style="@style/TextViewBody"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is a big huge light weight test some little testing idk what to say but im doing hey!!!This is a description test part idk what to say in here butit's just a test rn"/>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/nav_bar"/>



</androidx.constraintlayout.widget.ConstraintLayout>