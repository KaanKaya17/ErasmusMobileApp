<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".EducationSeas">

    <View
        android:id="@+id/headerGradient"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/gradient_header_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Creatures"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/textviewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_categories"
                android:textColor="#F3F4F6"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/allFishesByCountryName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_card_bg"
                        android:clickable="true"
                        android:onClick="countryAllFishes"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/fish"
                            app:tint="#3B82F6"
                            android:layout_marginBottom="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_categories_fish"
                            android:textColor="#1F2937"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/allCreaturesByCountryName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/category_card_bg"
                        android:clickable="true"
                        android:onClick="countryAllCreatures"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/creature"
                            app:tint="#6366F1"
                            android:layout_marginBottom="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_categories_creatures"
                            android:textColor="#1F2937"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/allOthersByCountryName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_card_bg"
                        android:clickable="true"
                        android:onClick="countryAllOther"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/coral"
                            app:tint="#8B5CF6"
                            android:layout_marginBottom="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_categories_corals"
                            android:textColor="#1F2937"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/animalsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_species"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"/>

            <include layout="@layout/horizantal_line"/>

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>