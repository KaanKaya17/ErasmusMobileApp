<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationSeas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="75dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="7dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:text="Birinci metin"
                style="@style/TextViewTitle"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Categories"
                style="@style/TextViewSubtitle"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/allFishesByCountryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:clickable="true"
                        android:onClick="countryAllFishes"
                        android:orientation="vertical"
                        android:background="@drawable/card">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/aboutus"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/boldNormal"
                                android:text="Fishes\n\n"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:padding="20dp"
                        android:clickable="true"
                        android:onClick="countryAllCreatures"
                        android:orientation="vertical"
                        android:background="@drawable/card">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/aboutus"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/boldNormal"
                                android:text="Creatures\n\n" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:clickable="true"
                        android:onClick="countryAllOther"
                        android:orientation="vertical"
                        android:background="@drawable/card">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/aboutus"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Corals,\nSponges,\nPlants"
                                style="@style/boldNormal" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/animalsType"
                android:text="Species"
                style="@style/TextViewSubtitle"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_marginBottom="10dp"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="7dp"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/nav_bar"/>


</androidx.constraintlayout.widget.ConstraintLayout>